---
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Home";

// take images from api
type LichenImage = {
  id: string;
  thumbnail: string;
  image: string;
  author: string;
  owner: string;
};

const images: Array<LichenImage> = await fetch("https://italic.units.it/api/v1/images/822")
  .then((res) => res.json())
  .then((data) => data.data);

console.log(images);
---

<BaseLayout pageTitle={pageTitle}>
  <p class="my-4">Welcome to the home page!</p>
  <hr class="bg-black my-2" />
  <div class="mx-auto flex gap-2 p-2 m-2 flex-wrap justify-center max-w-[1200px]">
    {
      images.map((image) => (
        <Image
          width="224"
          height="160"
          class="rounded-md object-cover max-w-[224px] max-h-[160px]"
          src={image.thumbnail}
          alt={image.id}
        />
      ))
    }
  </div>
</BaseLayout>
