---
import BaseLayout from '@/layouts/BaseLayout.astro'


const pageTitle = "About Me";
const identity = {
  firstName: "Sarah",
  country: "Canada",
  occupation: "Technical Writer",
  hobbies: ["photography", "birdwatching", "baseball"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

function getRandomInt(max: number) {
  return Math.floor(Math.random() * max);
}
const skillColors = ['red', 'blue', 'green', 'yellow', 'purple', 'pink'];
const skillColor = skillColors[getRandomInt(skillColors.length)];
---

<BaseLayout pageTitle={pageTitle}>
    <h2>... and my new Astro site!</h2>

    <p>
      I am working through Astro's introductory tutorial. This is the second page on my website, and
      it's the first one I built myself!
    </p>

    <p>
      This site will update as I complete more of the tutorial, so keep checking back and see how my
      journey is going!
    </p>
    My skills are:
    <ul>
      {skills.map((skill) => <li class="random-color p-2 m-2 border border-red-500 rounded-md max-w-32">{skill}</li>)}
    </ul>
</BaseLayout>

<style define:vars={{skillColor}}>
  .random-color {
    background-color: var(--skillColor);
  }
